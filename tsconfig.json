{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": [
      "./src/types/global.d.ts"
    ]
  },
  "exclude": [
    "./dist"
  ]
}